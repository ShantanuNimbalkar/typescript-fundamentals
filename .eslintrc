{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "@babel"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "env": {
    "shared-node-browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "error",
    "no-debugger": "error",
    "no-unused-vars": "error",
    "no-undef": "off",
    "no-redeclare": "off",
    "prefer-const": "off",
    "@babel/semi": ["error", "never"]
  }
}
